<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ComReliableMobile.MainPage">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">
            <!-- Spacing으로 간격 설정 -->
            <Button Text="Start Client" Clicked="StartUdp_Clicked" />
            <Button Text="Stop Client" Clicked="StopUdp_Clicked" />
            <Button Text="Start UDP Check" Clicked="StartUdpCheck_Clicked" />
            <Button Text="Stop UDP Check" Clicked="StopUdpCheck_Clicked" />

            <!-- Label 스타일 수정 -->
            <Frame BorderColor="Black" CornerRadius="5" Padding="10">
                <Label x:Name="LogLabel" 
                       Text="Log:"
                       FontAttributes="Bold"
                       VerticalOptions="Center" 
                       HorizontalOptions="Start" />
            </Frame>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
